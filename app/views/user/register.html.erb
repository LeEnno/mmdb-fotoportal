<div class="container container-register">
  <h1>Registrieren</h1>

  <% if @user && @user.errors.count > 0 %>
    <ul class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_tag nil, :class => 'form-horizontal' do %>
    
    <%= form_horizontal_group(
      label(:user, :firstname, 'Vorname', :class => 'control-label'),
      text_field(:user, :firstname)
    ) %>

    <%= form_horizontal_group(
      label(:user, :surname, 'Nachname', :class => 'control-label'),
      text_field(:user, :surname)
    ) %>
    
    <%= form_horizontal_group(
      label(:user, :email, 'Email-Adresse', :class => 'control-label'),  
      email_field(:user, :email)
    ) %>
    
    <%= form_horizontal_group(
      label(:user, :password, 'Passwort', :class => 'control-label'),  
      password_field(:user, :password)
    ) %>

    <%= form_horizontal_group(
      label(:user, :password_confirmation, 'Passwort wiederholen', :class => 'control-label'),  
      password_field(:user, :password_confirmation)
    ) %>

    <%= submit_tag('Registrieren', :class => 'btn btn-success btn-large') %>
    
  <% end %>
</div>